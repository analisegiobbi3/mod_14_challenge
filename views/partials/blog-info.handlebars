<div class="card single-post">
    <header class="card-header card-header-title has-background-grey-lighter">
        <div>
            <p class="has-text-primary-light"><a href="/blog/{{id}}" class="has-text-black is-capitalized" style="font-size: 20px; font-weight: bold;">{{title}}</a></p>
        </div>
    </header>
    <div class="card-content">
        <div class="content has-text-justified">
            {{content}}
        </div>
        <div>
            <b>{{user.username}}</b>
            | {{format_date created_at}} | <a href="/blog/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>
</div>
