<section>
    <div class="column">
        <h2>Contribute to the Blog</h2>
        <form class="new-post-form">
            <div class="mb-3">
                <label for="blog-title" class="form-label">Post Title</label>
                <input type="text" id="blog-title" name="blog-title">
            </div>
            <div class="form-floating">
                <textarea class="form-control" name="blog-text" placeholder="Your Content" id="floatingTextarea2" style="height: 100px"></textarea>
                <label for="floatingTextarea2">Comments</label>
            </div>
            <button type="submit" class="btn">Post</button>
        </form>
    </div>
    <div class="column">
        <h2>About Me</h2>
        {{> user-info}}
    </div>
</section>

{{if blogs.length}}
<section>
    <h2>My Blog Posts</h2>
    <ol>
        {{#each blogs as |blog|}}
        <li>
            {{> blog-info blog}}
            <a href="/dashboard/edit/{{blog.id}}" class="edit-link">Edit your post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}
<script src="/public/js/post.js"></script>

